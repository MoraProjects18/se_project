<!DOCTYPE html>
<html lang="en">

<head>

    <%- include('../partials/heads/head'); %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/custom.css" media="screen" title = "no title" charset = "utf-8">
</head>

<body class="d-flex flex-column min-vh-100">

<header>
    <%- include('../partials/navs/nav'); %>
</header>

<div class="Center">



    <% if(data.dataFound){ %>
        <h2>Today Tickets</h2><br>
        <div class="container mt-4">
            <table class="table table-hover" id='SO_table'>
                <thead class="table-light">
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">User Email</th>

                    <th scope="col">Start Time</th>
                    <th scope="col">Status</th>
                    <th scope="col">Operation</th>
                    <th></th>
                </tr>
                </thead>
                <tbody id='SO_table_body'>

                <% for(var ti of ticket){ %>
                    <tr>

                        <td style="padding-top: 25px"> <%= ti.first_name %></td>
                        <td style="padding-top: 25px"> <%=ti.email%></td>

                        <td style="padding-top: 25px"> <%= (ti.start_time).substring(0,5) %></td>
                        <td style="padding-top: 25px"> <%=ti.status%></td>
                        <td style="justify-content: right"> <form action="/ticket/confirmTicket" method="POST"><input hidden name="ticket_id" id="ticket_id" value="<%=ti.ticket_id%>"><button class=" btn-grad-cancel" type = "submit">Cancel</button><button class="btn-grad-confirm" type = "submit">Confirm</button></form></td>
                    </tr>
                <% } %>






</tbody></table>

    <% } else {%>
        <div><h4><%= data.error.message%></h4></div>
    <% } %>



</div>


</div>
<footer class="mt-auto">
    <%- include('../partials/footers/staff_footer'); %>
</footer>

</body>
</html>