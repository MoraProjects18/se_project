<% if(true){ %>

        <div class="card shadow p-3 mb-5 bg-white rounded col-md-10 col-sm-12 offset-1">
            <h5 class="card-header">Ticket</h5>
            <form action="/ticket/create" method="POST">
            <div class="card-body">
                <div class="form-group row">
                    <label for="card_invoice" class="col-sm-4 col-form-label text-left">User ID :</label>
                    <div class="col-sm-8">
                        <input type="number" class="form-control detailInput" id="user_id" name="user_id" value="user_id_of the customer" >
                    </div>
                </div>
                <div class="form-group row">
                    <label for="card_invoice" class="col-sm-4 col-form-label text-left">Status :</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control detailInput" id="status" name="status" value= "Open" >
                    </div>
                </div>
                <div class="form-group row">
                    <label for="card_invoice" class="col-sm-4 col-form-label text-left">Start Time :</label>
                    <div class="col-sm-8">
                        <input type="datetime-local" class="form-control detailInput" id="start_time"  name="start_time" >
                    </div>
                </div>
                <div class="form-group row">
                    <label for="card_invoice" class="col-sm-4 col-form-label text-left">End Time :</label>
                    <div class="col-sm-8">
                        <input type="datetime-local" class="form-control detailInput" id="end_time"  name="end_time" >
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-8">
                        <button type="submit" >Create Ticket</button>
                    </div>

                </div>

            </div>
            </form>
        </div>

    </div>


<% } %>





